<table width="870" border="0" align="center" cellpadding="5" cellspacing="0" id="news-list" class="pretty">
	<thead>
		<tr>
			<% if current_user.admin %>
				<th width="16" scope="col">&nbsp;</th>
				<th width="16" scope="col">&nbsp;</th>
			<% else %>
				<th width="16" scope="col">&nbsp;</th>
			<% end %>
			<th width="240" scope="col">Monto</th>
			<th width="180" scope="col">Fecha</th>
		</tr>
	</thead>
	<tbody>
		<% @amounts.each do |c| %>
			<tr class="item_list">
				<% if current_user.admin %>
					<td width="16">
						<%= link_to image_tag("edit.png",size:"16x16"), edit_customer_path(c) %>
					</td>
				<% else %>
					<td width="16">
						<%= link_to image_tag("edit.png",size:"16x16"), edit_customer_path(c) %>
					</td>
				<% end %>
				<td width="240"><%= link_to c.name, customer_path(c) %></td>
				<td width="180"><%= c.email %></td>
			</tr>
		<% end %>
	</tbody>
</table>