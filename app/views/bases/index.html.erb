<% content_for :head do %>
  <%= stylesheet_link_tag 'bases', :media => 'all' %>
  <%= stylesheet_link_tag 'jquery-ui', :media => 'all' %>
  <%= javascript_include_tag 'jquery-ui' %>	
  <%= javascript_include_tag 'bases' %>
 <% end %>
<div id="container">
	<%= render 'shared/admin_login_info' %>
	<div id="header">
		<%= render 'shared/admin_header' %>
	</div>
	<div id="navcontainer">
		<%= render 'shared/admin_menu', page: 5 %>
	</div>

	<div id="content">
		<% if flash[:notice]%>
			<p class="done"> <%= flash[:notice]%></p>
		<% end %>
		<h2>Motocicleta</h2>
		<h1><%= @motorcycle.name %></h1>
		<h1>Mensajero: <%= @motorcycle.messenger_name %></h1>
		<h2>Bases</h2>
		<%= button_tag 'Nueva Base', type: 'button', id: 'new-base-button', class: 'button' %>
		<div id='bases'>
			<%= render 'bases' %>
		</div>

		<div id='new-base-form'>
			<%= form_for @base, url: motorcycle_bases_path(@motorcycle) do |b| %>
				<%= b.text_field :amount, placeholder: 'Monto' %>
				<%= b.text_area :description, placeholder: 'DescripciÃ³n' %>
			<% end %>

		</div>
		
		<div id='edit-base-form'>
		</div>
	</div>
</div>
