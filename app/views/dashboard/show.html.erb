<div id="container">
	<%= render 'shared/admin_login_info' %>
	<div id="header">
		<%= render 'shared/admin_header' %>
	</div>
	<div id="navcontainer">
		<%= render 'shared/admin_menu', page: 0 %>
	</div>

	<div id="content">
		<h1>Dashboard</h1>
		<p><%= "Bienvenido, #{current_user.name}" %><p>
		<% if flash[:error] %>
		  <p><%= flash[:error] %><p>
		<% end %>
		<% if flash[:notice] %>
		  <p><%= flash[:notice] %><p>
		<% end %>
		<h2>Acciones</h2>
		<% if current_user.admin %>
		  <p><%= link_to 'Crear Usuario del Sistema', new_user_path %><p>
		<% end %>
		<p><%= link_to 'Crear Domicilio', new_delivery_path %><p>
		<h2>Ver</h2>
		<% if current_user.admin %>
			<p><%= link_to 'Lista de Usuarios del Sistema', users_path %><p>
		<% end %>
		<p><%= link_to 'Lista de Domicilios', '#' %><p>
		<p><%= link_to 'Lista de Clientes', '#' %></p>
		<h2>Configuraci√≥n</h2>
		<p><%= link_to 'Editar', edit_user_path(current_user) %><p>
	</div>
</div>