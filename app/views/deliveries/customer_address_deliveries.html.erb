<% content_for :head do %>
  <%= stylesheet_link_tag 'deliveries', :media => 'all' %>	
  <%= stylesheet_link_tag 'jquery-ui', :media => 'all' %>
  <%= javascript_include_tag 'jquery-ui' %>
  <%= javascript_include_tag 'jquery-validate' %>
  <%= javascript_include_tag 'deliveries' %>
<% end %>

<div id="container">
	<%= render 'shared/admin_login_info' %>
	<div id="header">
		<%= render 'shared/admin_header' %>
	</div>
	<div id="navcontainer">
		<%= render 'shared/admin_menu', page: 2 %>
	</div>

	<div id="content">
		<% if flash[:notice]%>
			<p class="done"> <%= flash[:notice]%></p>
		<% end %>
		<h1>Cliente</h1>
		<p><%= @customer.name %></p>

		<h1>Direcci√≥n</h1>
		<p><%= @address.value %></p>
		<h1>Domicilios</h1>
		<div id='deliveries'>
			<% if current_user.admin %>
				<%= render 'admin_deliveries' %>
			<% else %>
				<%= render 'deliveries' %>
			<% end %>
			
		</div>
	</div>
</div>