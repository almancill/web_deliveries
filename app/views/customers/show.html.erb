<div id="container">
	<%= render 'shared/admin_login_info' %>
	<div id="header">
		<%= render 'shared/admin_header' %>
	</div>
	<div id="navcontainer">
		<%= render 'shared/admin_menu', page: 1 %>
	</div>

	<div id="content">
		<% if flash[:notice]%>
			<p class="done"> <%= flash[:notice]%></p>
		<% end %>
		<h1>Información del Cliente</h1>
		
		<h2>Nombre del Cliente</h2>
		<h3><%= @customer.name %></h3>
		
		<h2>Email del Cliente</h2>
		<h3><%= @customer.email %></h3>

		<%= form_tag '#' do %>
			<p><%= link_to 'Agregar Telefono', '#', class: "button"%></p>
		<% end %>

		<div id='telephones'>
		
		</div>

		<%= form_tag '#' do %>
			<p><%= link_to 'Agregar Dirección', '#', class: "button"%></p>
		<% end %>

		<div id='address'>
		
		</div>

	</div>
</div>