<div id="container">
	<%= render 'shared/admin_login_info' %>
	<div id="header">
		<%= render 'shared/admin_header' %>
	</div>
	<div id="navcontainer">
		<%= render 'shared/admin_menu', page: 1 %>
	</div>

	<div id="content">
		<% if flash[:notice]%>
			<p class="done"> <%= flash[:notice]%></p>
		<% end %>
		<h1>Registrar Usuario</h1>
		<%= form_for @customer do |f| %>
			<%= f.text_field :name, placeholder: 'Nombre Completo' %>
	      <% if @customer.errors[:name] %>
	      <%= @customer.errors[:name].first %>
	      <% end %><br><br>
	      <%= f.email_field :email , placeholder: 'Email' %>
	      <% if @customer.errors[:email] %>
	        <%= @customer.errors[:email].first %>
	      <% end %><br><br>
	      <%= f.submit "Registrar Usuario" %>
    	<% end %><br><br>
	</div>
</div>
