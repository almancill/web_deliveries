<% content_for :head do %>
  <%= stylesheet_link_tag 'customers', :media => 'all' %>	
  <%= stylesheet_link_tag 'jquery-ui', :media => 'all' %>
  <%= javascript_include_tag 'jquery-ui' %>
  <%= javascript_include_tag 'jquery-validate' %>
<% end %>

<div id="container">
	<%= render 'shared/admin_login_info' %>
	<div id="header">
		<%= render 'shared/admin_header' %>
	</div>
	<div id="navcontainer">
		<%= render 'shared/admin_menu', page: 1 %>
	</div>

	<div id="content">
		<% if flash[:notice]%>
			<p class="done"> <%= flash[:notice]%></p>
		<% end %>
		<h1>Información del Cliente</h1>
		
		<h2>Nombre del Cliente</h2>
		<h3><%= link_to @customer.name, customer_path(@customer) %></h3>
		
		<h2>Email del Cliente</h2>
		<h3><%= @customer.email %></h3>

		<h2>Dirección del Cliente</h2>
		<h3><%= @address.value %></h3>

		<h2>Domicilios a la Dirección</h2>
		<div id='deliveries'>
			<%=  %>
		</div>
	</div>
</div>